{
  "name": "Open with Brave",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Adds 'Open link in Brave' to link and page context menus.",
  "permissions": [
    "contextMenus",
    "nativeMessaging"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}